<article id="<%= book.id %> " class="bookdisplay">
  <img src="<%= book.image_url %>">

  <h2>
      <%= book.title %>
  </h2>
  <h3>
      <%= book.author %>
  </h3>
  <p>
      <%= book.description %> 
  </p>
  
  <form action='/books' method='POST'>
    <input type="text" name="title" value=' <%= book.title %>'>
    <input type="text" name="author" value=' <%= book.author %>'>
    <input type="text" name="description" value=' <%= book.description %>'>
    <input type="text" name="image_url" value=' <%= book.image_url %>'>
    <input type="text" name="isbn" value=' <%= book.isbn %>'>
    <input type="text" name="bookshelf" value=' fiction'>
    <button type='submit'>Save your books!</button>
    </form>
    <form action='/books/<%= book.id %>' method="GET">
        <button type='submit'>MORE INFO</button>
    </form>
</article>